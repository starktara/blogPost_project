<%- include("partials/header"); -%>

<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label>Title </label>
        <input class="form-control" type="text" name="postTitle" placeholder="Enter Title">
    </div>
    <div class="form-group">
        <label>Post</label>  
        <textarea class="form-control" name="postContent" placeholder="Enter Content" rows="5"></textarea>
    </div>

    <button class="btn btn-sm btn-primary" type="submit">Publish</button>
</form>

<%- include("partials/footer"); -%>